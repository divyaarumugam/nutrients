<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:onClick="setListFooter"
        android:src="@drawable/greenpeas"
        android:layout_above="@+id/textView21"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="28dp"
        android:id="@+id/textView21"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Green Peas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:textStyle="italic"
        android:textSize="25dp"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignRight="@+id/textView24"
        android:layout_alignEnd="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protiens"
        android:textStyle="italic"
        android:textSize="25dp"
        android:id="@+id/textView24"
        android:layout_alignTop="@+id/textView25"
        android:layout_toLeftOf="@+id/textView21"
        android:layout_toStartOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbohydrates"
        android:textStyle="italic"
        android:textSize="25dp"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fats          "
        android:textStyle="italic"
        android:textSize="25dp"
        android:id="@+id/textView25"
        android:layout_below="@+id/textView27"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="57"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/textView26"
        android:editable="false"
        android:ellipsize="middle"
        android:layout_below="@+id/textView22"
        android:layout_alignRight="@+id/textView24"
        android:layout_alignEnd="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView27"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignRight="@+id/textView29"
        android:layout_alignEnd="@+id/textView29"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/textView25"
        android:layout_alignStart="@+id/textView25"
        android:text="14g" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:text="It acts as anti-oxidants,protects stomach cancer promotes health."
        android:layout_below="@+id/textView21"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/textView26"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5g"
        android:textSize="20dp"
        android:id="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView26"
        android:layout_toStartOf="@+id/textView26"
        android:layout_below="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.4g"
        android:textSize="20dp"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/textView27"
        android:layout_alignEnd="@+id/textView27" />

</RelativeLayout>
