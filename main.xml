<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    android:baselineAligned="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:background="#f9e79f"
        android:id="@+id/button_home_login"
        android:textSize="27dp"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/textView19"
        android:layout_toLeftOf="@+id/button2_home_register"
        android:layout_toStartOf="@+id/button2_home_register" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="27dp"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textSize="27dp"
        android:id="@+id/textView19"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:background="#f9e79f"
        android:textSize="25dp"
        android:id="@+id/button2_home_register"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/button_home_login"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password?"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView20"
        android:layout_alignTop="@+id/button_home_login"
        android:layout_alignLeft="@+id/button2_home_register"
        android:layout_alignStart="@+id/button2_home_register"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_home_username"
        android:layout_alignLeft="@+id/button2_home_register"
        android:layout_alignStart="@+id/button2_home_register"
        android:layout_above="@+id/textView19"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignEnd="@+id/textView20" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2_home_password"
        android:layout_alignTop="@+id/textView19"
        android:layout_toRightOf="@+id/button_home_login"
        android:layout_alignRight="@+id/editText_home_username"
        android:layout_alignEnd="@+id/editText_home_username" />

</RelativeLayout>
